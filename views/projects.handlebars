{{#section "styles"}}
<style>
  .project-card {
    border: 1px solid #2a2a2a;
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 16px;
    background: #1c1c1c;
  }
  .project-card:hover {
    border-color: #62f5e5;
  }
  .featured-badge {
    display: inline-block;
    background: #1e2a10;
    color: #62f5e5;
    border: 1px solid #4a7c20;
    font-size: 0.75rem;
    padding: 2px 8px;
    border-radius: 20px;
    margin-bottom: 10px;
  }
</style>
{{/section}}

<h2 class="section-title">Open Source <span>Projects</span></h2>

{{#if featuredProjects}}
  <p style="color:#888; font-size:0.85rem; text-transform:uppercase; letter-spacing:0.1em; margin-bottom:16px;">Featured</p>

  {{#each featuredProjects}}
    <div class="project-card">
      <span class="featured-badge">★ Featured</span>
      <h3 style="font-size:1.1rem; font-weight:600; margin-bottom:8px;">{{this.name}}</h3>
      <p style="color:#aaa; line-height:1.7; font-size:0.95rem;">{{this.description}}</p>
      <a href="https://{{this.url}}" target="_blank" style="display:inline-block; margin-top:14px; font-size:0.85rem; color:#62f5e5;">
        → {{this.url}}
      </a>
    </div>
  {{/each}}
{{/if}}

{{#unless (eq otherProjects.length 0)}}
  <p style="color:#888; font-size:0.85rem; text-transform:uppercase; letter-spacing:0.1em; margin: 30px 0 16px;">Other Projects</p>

  {{#each otherProjects}}
    <div class="project-card">
      <h3 style="font-size:1rem; font-weight:600; margin-bottom:8px;">{{this.name}}</h3>
      <p style="color:#aaa; line-height:1.7; font-size:0.9rem;">{{this.description}}</p>
      <a href="https://{{this.url}}" target="_blank" style="display:inline-block; margin-top:10px; font-size:0.82rem; color:#888;">
        → {{this.url}}
      </a>
    </div>
  {{/each}}
{{/unless}}

{{#section "sidebar"}}
  {{> contact}}

  <div class="card" style="margin-top:16px;">
    <p style="font-size:0.75rem; text-transform:uppercase; letter-spacing:0.1em; color:#888; margin-bottom:12px;">Project Count</p>
    <p style="font-size:2.5rem; font-weight:700; color:#62f5e5;">{{featuredProjects.length}}</p>
    <p style="color:#888; font-size:0.85rem;">Featured projects</p>
    <hr style="border-color:#2a2a2a; margin:14px 0;">
    <p style="font-size:2.5rem; font-weight:700; color:#62f5e5;">{{otherProjects.length}}</p>
    <p style="color:#888; font-size:0.85rem;">Other projects</p>
  </div>
{{/section}}
